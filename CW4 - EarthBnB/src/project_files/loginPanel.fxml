<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project_files.LoginPanelController">
   <children>
      <BorderPane fx:id="loginpagePane" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <AnchorPane prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Button id="signinMenu" fx:id="signinMenu" layoutX="105.0" layoutY="12.0" mnemonicParsing="false" onAction="#navigateToRegister" prefHeight="27.0" prefWidth="161.0" text="SIGN IN" />
                  <Button id="signupMenu" fx:id="signupMenu" layoutX="288.0" layoutY="12.0" mnemonicParsing="false" onAction="#navigateToRegister" prefHeight="27.0" prefWidth="161.0" text="SIGN UP" />
               </children>
            </AnchorPane>
         </top>
         <center>
            <BorderPane fx:id="mainPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <left>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <TextField id="usernameTextField" fx:id="usernameTextField" promptText="Username" AnchorPane.leftAnchor="80.0" AnchorPane.topAnchor="100.0" />
                        <TextField id="passwordTextField" fx:id="passwordTextField" promptText="Password" AnchorPane.leftAnchor="80.0" AnchorPane.topAnchor="160.0" />
                     </children>
                  </AnchorPane>
               </left>
               <right>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button id="loginButton" fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonClicked" prefWidth="100.0" text="LOGIN" AnchorPane.rightAnchor="140.0" AnchorPane.topAnchor="130.0" />
                     </children>
                  </AnchorPane>
               </right>
            </BorderPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
