<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="350.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project_files.RegisterController">
   <children>
      <BorderPane prefHeight="350.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox maxWidth="200.0" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField id="nameField" fx:id="nameField" prefHeight="27.0" prefWidth="100.0" promptText="Name">
                     <VBox.margin>
                        <Insets top="60.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField id="emailField" fx:id="emailField" prefHeight="27.0" prefWidth="100.0" promptText="Email">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField id="pwField" fx:id="pwField" prefHeight="27.0" prefWidth="100.0" promptText="Password">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField id="pwConfField" fx:id="pwConfField" prefHeight="27.0" prefWidth="100.0" promptText="Confirm password">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <Button id="signupButton" fx:id="signupButton" mnemonicParsing="false" onAction="#validateRegister" prefHeight="27.0" prefWidth="229.0" text="SIGN UP">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Label id="feedbackLabel" fx:id="feedbackLabel" prefHeight="17.0" prefWidth="202.0" style="-fx-text-alignment: center; -fx-alignment: center;">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                     <font>
                        <Font name="Times New Roman Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
